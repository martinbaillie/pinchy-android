<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pinchy.android" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.pinchy.android.activites.StoryActivity"
            android:label="@string/title_activity_story" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pinchy.android.activites.WebViewActivity"
            android:label="@string/title_activity_story" >
        </activity>
        <activity
            android:name="com.pinchy.android.activites.CommentsViewActivity"
            android:label="@string/title_activity_comments_view" >
        </activity>
    </application>

</manifest>
